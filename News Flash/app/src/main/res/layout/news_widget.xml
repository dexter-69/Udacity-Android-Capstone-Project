<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#131a20"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/headline"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/widget_news_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/widget_news_thumbnail"
        tools:src="@drawable/toolbar_background" />

    <TextView
        android:id="@+id/widget_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#fff"
        android:textSize="16sp"
        tools:text="News Title" />
</LinearLayout>